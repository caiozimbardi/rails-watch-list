
<h1 class="container d-flex justify-content-center mt-3"><%= @list.name %></h1>


<div class="container d-flex justify-content-center">
  <%= link_to "ADD NEW BOOKMARK", new_list_bookmark_path(@list), class: "btn btn-success position-absolute" %>
</div>

<div class="container">
  <% @bookmarks.each do |bookmark| %>
    <div class="card-product container my-3">
    <%= image_tag "#{bookmark.movie.poster_url}", alt: "bookmark", width: 200 %>
    <div class="card-product-infos">
      <h2><%= bookmark.movie.title %> </h2>
      <p><%= bookmark.movie.overview%></p>
      <p><strong><%= bookmark.comment %></strong></p>
      <p><%= bookmark.movie.rating %> ‚≠ê</p>
      <%= link_to "Delete", bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
  <% end %>
</div>
