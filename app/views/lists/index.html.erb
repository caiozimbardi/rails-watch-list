<div class="container d-flex justify-content-center mt-3">
  <h1>Create your lists of movies</h1>
</div>

<% @lists.each do |list| %>
<div class="container d-flex justify-content-between align-items-center">
  <%= link_to list.name, list_path(list.id), class: "card-category container bg-secondary bg-gradient my-4" %>
  <%= link_to "Delete", list_path(list.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>
<% end %>
